<p id="notice"><%= notice %></p>
<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order No</th>
      <th>Street</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Card no</th>
      <th>Exp date</th>
      <th>Name on card</th>
      <th>Organisation</th>
      <th>Client</th>
      <th>Pokemon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <% if order.user == current_user %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.street %></td>
        <td><%= order.city %></td>
        <td><%= order.postcode %></td>
        <td><%= order.card_no[-4..-1] %></td>
        <td><%= order.exp_date %></td>
        <td><%= order.name_on_card %></td>
        <td><%= order.organisation %></td>
        <td><%= current_user.email.split('@')[0].capitalize %></td>
        <td><%= order.pokedex.Name %></td>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>
