<p id="notice"><%= notice %></p>

<h1>Pokedex</h1>

<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Name</th>
      <th>Type 1</th>
      <th>Type 2</th>
      <th>Total</th>
      <th>Hp</th>
      <th>Attack</th>
      <th>Defense</th>
      <th>Sp atk</th>
      <th>Sp def</th>
      <th>Speed</th>
      <th>Generation</th>
      <th>Legendary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokedexes.each do |pokedex| %>
      <tr>
        <td><%= pokedex.Index %></td>
        <td><%= pokedex.Name %></td>
        <td><%= pokedex.Type_1 %></td>
        <td><%= pokedex.Type_2 %></td>
        <td><%= pokedex.Total %></td>
        <td><%= pokedex.HP %></td>
        <td><%= pokedex.Attack %></td>
        <td><%= pokedex.Defense %></td>
        <td><%= pokedex.Sp_Atk %></td>
        <td><%= pokedex.Sp_Def %></td>
        <td><%= pokedex.Speed %></td>
        <td><%= pokedex.Generation %></td>
        <td><%= pokedex.Legendary %></td>
        <td><%= link_to 'Show', pokedex %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

