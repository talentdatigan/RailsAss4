var metapod_name  = "<%= PokeApi.get(pokemon: 'metapod').name %>";
  var metapod_base_exp = "<%= PokeApi.get(pokemon: 'metapod').base_experience %>";

var kanto_region = "<%= PokeApi.get(region: 'kanto').name %>";


var bulbasaur = L.icon({
    iconUrl: '/assets/bulbasaur.png',
    

    iconSize:     [38, 75], // size of the icon
    shadowSize:   [50, 64], // size of the shadow
    iconAnchor:   [22, 94], // point of the icon which will correspond to marker's location
    shadowAnchor: [4, 62],  // the same for the shadow
    popupAnchor:  [-3, -76] // point from which the popup should open relative to the iconAnchor
});

var squirtle = L.icon({
    iconUrl: '/assets/squirtle.png',
    

    iconSize:     [38, 75], // size of the icon
    shadowSize:   [50, 64], // size of the shadow
    iconAnchor:   [22, 94], // point of the icon which will correspond to marker's location
    shadowAnchor: [4, 62],  // the same for the shadow
    popupAnchor:  [-3, -76] // point from which the popup should open relative to the iconAnchor
});
var charmander = L.icon({
    iconUrl: '/assets/charmander.jpg',
    

    iconSize:     [38, 75], // size of the icon
    shadowSize:   [50, 64], // size of the shadow
    iconAnchor:   [22, 94], // point of the icon which will correspond to marker's location
    shadowAnchor: [4, 62],  // the same for the shadow
    popupAnchor:  [-3, -76] // point from which the popup should open relative to the iconAnchor
});
var caterpie = L.icon({
    iconUrl: '/assets/caterpie.png',
    

    iconSize:     [38, 40], // size of the icon
    shadowSize:   [50, 64], // size of the shadow
    iconAnchor:   [22, 94], // point of the icon which will correspond to marker's location
    shadowAnchor: [4, 62],  // the same for the shadow
    popupAnchor:  [-3, -76] // point from which the popup should open relative to the iconAnchor
});

var lucario = L.icon({
    iconUrl: '/assets/lucario.png',
    

    iconSize:     [80, 75], // size of the icon
    shadowSize:   [50, 64], // size of the shadow
    iconAnchor:   [22, 94], // point of the icon which will correspond to marker's location
    shadowAnchor: [4, 62],  // the same for the shadow
    popupAnchor:  [-3, -76] // point from which the popup should open relative to the iconAnchor
});

var pickachu = L.icon({
    iconUrl: '/assets/pickachu.png',
    

    iconSize:     [80, 75], // size of the icon
    shadowSize:   [50, 64], // size of the shadow
    iconAnchor:   [22, 94], // point of the icon which will correspond to marker's location
    shadowAnchor: [4, 62],  // the same for the shadow
    popupAnchor:  [-3, -76] // point from which the popup should open relative to the iconAnchor
});


var metapod = L.icon({
