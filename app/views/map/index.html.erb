    .bindPopup(`Name : ${metapod_name} \n | Abilities : ${"<% PokeApi.get(pokemon: 'metapod').abilities.each do |ability|%> <%= ability.ability.name %> <%end%>"} \n | Base Experience : ${metapod_base_exp}`,customOptions)



</script>
