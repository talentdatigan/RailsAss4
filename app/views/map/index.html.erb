<script>
// RUN npm install pokemon-font

var map = L.map('mapid').setView([51.505, -0.09], 2);
 var bulbasaur_name = "<%= PokeApi.get(pokemon: 'bulbasaur').name %>";
 var bulbasaur_base_exp = "<%= PokeApi.get(pokemon: 'bulbasaur').base_experience %>";

 var squirtle_name  = "<%= PokeApi.get(pokemon: 'squirtle').name %>";
  var squirtle_base_exp = "<%= PokeApi.get(pokemon: 'squirtle').base_experience %>";

var charmander_name  = "<%= PokeApi.get(pokemon: 'charmander').name %>";
  var charmander_base_exp = "<%= PokeApi.get(pokemon: 'charmander').base_experience %>";

var caterpie_name  = "<%= PokeApi.get(pokemon: 'caterpie').name %>";
  var caterpie_base_exp = "<%= PokeApi.get(pokemon: 'caterpie').base_experience %>";

var lucario_name  = "<%= PokeApi.get(pokemon: 'lucario').name %>";
